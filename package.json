{
  "name": "@rust-pulse/pairing-app",
  "version": "1.0.0",
  "description": "Rust Pulse Pairing Tool - Pair servers via Steam",
  "author": "TheShadew",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheShadew/Rust-Pulse.git"
  },
  "private": true,
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "package:win": "electron-builder --win"
  },
  "dependencies": {
    "@rust-pulse/core": "*",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "28.1.3",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^8.4.33",
    "postcss": "^8.4.33",
    "lucide-react": "^0.312.0"
  },
  "build": {
    "appId": "com.rustpulse.pairing",
    "productName": "Rust Pulse Pairing",
    "artifactName": "${productName}-Setup.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "!**/node_modules/**/playwright/**",
      "!**/node_modules/**/playwright-core/**",
      "!**/node_modules/**/puppeteer/**",
      "!**/node_modules/**/puppeteer-core/**",
      "!**/node_modules/**/@playwright/**",
      "!**/node_modules/**/chromium/**",
      "!**/node_modules/**/chrome-launcher/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "TheShadew",
      "repo": "Rust-Pulse"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png"
    }
  }
}
